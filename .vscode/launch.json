{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Jest debug current file",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "args": [
                "--verbose",
                "-i",
                "--no-cache",
                "--testPathPattern",
                "${fileBasename}"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}